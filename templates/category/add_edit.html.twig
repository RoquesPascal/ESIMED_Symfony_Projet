{% extends 'base.html.twig' %}

{% block title %}
    {% if(ajout) %}
        Ajout
    {% else %}
        Edition
    {% endif %}
{% endblock %}

{% block headerButtons %}
    <div class="blockButton">
        <a href="{{ path('admin_category_index') }}"><button>Liste des cat&eacute;gories</button></a>
    </div>
{% endblock %}

{% block content %}
    <div class="formAddEditCategory">
        {{ form_start(form) }}
            Nom de la cat&eacute;gorie
            {{ form_widget(form.name) }}

            <hr width="100%"/>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {{ form_rest(form) }}
            <button type="submit">
                {% if(ajout) %}
                    Ajouter
                {% else %}
                    Enregistrer
                {% endif %}
            </button>
        {{ form_end(form) }}
    <div>
{% endblock %}
