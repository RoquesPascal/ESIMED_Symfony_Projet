{% extends 'base.html.twig' %}

{% block title %}D&eacute;tails de l'annonce{% endblock %}

{% block headerButtons %}
    <div class="blockButton">
        <a href="{{ path('admin_index') }}"><button>Liste des annonces (admin)</button></a>
    </div>
{% endblock %}

{% block content %}
    <table>
        <tr>
            <th>id</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Cat&eacute;gorie</th>
            <th>Auteur</th>
            <th>Email</th>
            <th>Prix</th>
            <th>Etat</th>
            <th>Date de cr&eacute;ation</th>
            <th>Date de publication</th>
            {% if advert.getState() != 'rejected' %}
                <th>Actions</th>
            {% endif %}
        </tr>
        <tr>
            <td>{{ advert.getId() }}</td>
            <td>{{ advert.getTitle() }}</td>
            <td>{{ advert.getContent() }}</td>
            <td>{{ advert.getCategory().getName() }}</td>
            <td>{{ advert.getAuthor() }}</td>
            <td>{{ advert.getEmail() }}</td>
            <td>{{ advert.getPrice() }}</td>
            <td>{{ advert.getState() }}</td>
            <td>{{ advert.getCreatedAt()|date("d-m-Y H:i:s") }}</td>
            <td>{{ advert.getPublishedAt() is empty ? "" : advert.getPublishedAt|date("d-m-Y H:i:s") }}</td>
            {% if advert.getState() == 'draft' %}
                <td>
                    <a href="{{ path('admin_advertvalidation_validate', {'id': advert.getId(), 'view': 'index'}) }}"><button>Publier</button></a>
                    <a href="{{ path('admin_advertvalidation_reject', {'id': advert.getId(), 'view': 'index'}) }}"><button>Rejeter</button></a>
                </td>
            {% elseif advert.getState() == 'published' %}
                <td>
                    <a href="{{ path('admin_advertvalidation_reject', {'id': advert.getId(), 'view': 'index'}) }}"><button>Rejeter</button></a>
                </td>
            {% endif %}
        </tr>
    </table>
{% endblock %}
